@model StellerAcunMedyaPortfolio.Models.Tbl_Admin
@{
    Layout = null;
}




<!doctype html>
<html lang="en">
<head>
    <title>Login 07</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Templates/login-form-17/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                
            </div>
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="text-wrap p-4 p-lg-5 text-center d-flex align-items-center order-md-last">
                            <div class="text w-100">
                                <h2>Hoşgeldin...</h2>
                                
                                <a href="/Default/Index" class="btn btn-white btn-outline-white">Ana Sayfaya Git </a>
                            </div>
                        </div>
                        <div class="login-wrap p-4 p-lg-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Giriş Yap </h3>
                                </div>
                                
                            </div>
                            <form method="post" class="signin-form">
                                <div class="form-group mb-3">

                                    <label>Kullanıcı Adı</label>
                                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                                </div>
                                <div class="form-group mb-3">
                                    <label>Şifreniz</label>
                                    <input type="password" name="Password" class="form-control" />
                                    <br />
                                   
                                </div>
                                <div style="color:red">@Html.ValidationSummary()</div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap </button>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Templates/login-form-17/js/jquery.min.js"></script>
    <script src="~/Templates/login-form-17/js/popper.js"></script>
    <script src="~/Templates/login-form-17/js/bootstrap.min.js"></script>
    <script src="~/Templates/login-form-17/js/main.js"></script>

</body>
</html>
















<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container align-content-center">
    <form method="post">

        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        <br />
        <label>Şifreniz</label>
        <input type="password" name="Password" class="form-control" />
        <br />
        <p style="color:red"> @Html.ValidationSummary() </p>

        <button class="btn btn-primary">Giriş Yap</button>
    </form>

</div>