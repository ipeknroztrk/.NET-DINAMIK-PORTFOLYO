@model List<StellerAcunMedyaPortfolio.Models.TblProject>

<section id="portfolio" class="section">
    <div class="container text-center">
        <h6 class="subtitle">Projelerim</h6>
        <h6 class="section-title mb-4">Geliştirdiğim Projelerime Göz Atın </h6>
        <p class="mb-5 pb-4">Geliştirmiş olduğum projelerim ekran alıntıları ve github linkine ulaşabilirsiniz.</p>

        <div class="row">
           @foreach(var item in Model)
            {
            <div class="col-sm-4">
                <div class="img-wrapper">
                    <img src="@item.ImageUrl" alt="">
                    <div class="overlay">
                        <div class="overlay-infos">
                            <h5>@item.ProjectTitle</h5>
                            <p>@item.Description</p>
                            <a href="javascript:void(0)"><i class="ti-zoom-in"></i></a>
                            <a href="@item.GithubUrl" target="_blank"><i class="ti-link"></i></a>
                        </div>
                    </div>
                </div>
            </div>
             }

         </div>

    </div>
</section>

