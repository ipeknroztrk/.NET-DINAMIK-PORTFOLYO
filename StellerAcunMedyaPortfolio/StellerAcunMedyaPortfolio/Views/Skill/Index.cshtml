@model List<StellerAcunMedyaPortfolio.Models.TblSkill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h2>Yeteneklerim</h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Yetenek Adı</th>
       
        <th>Değer </th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.SkillName</td>
           
            <th>@item.Value</th>


            
            <td><a href="/Skill/DeleteSkill/@item.Skillıd" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Skill/UpdateSkill/@item.Skillıd" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }
</table>

<br />

<a href="/Skill/AddSkill" class="btn btn-outline-primary">Yeni Yetenek Ekle</a>

