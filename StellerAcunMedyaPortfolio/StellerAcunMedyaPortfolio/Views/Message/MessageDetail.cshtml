@model StellerAcunMedyaPortfolio.Models.TblMessage
@{
    ViewBag.Title = "MessageDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Mesaj Detayları</h2>
<br />
<a class="btn-outline-danger" href="/Message/Index/">Mesajlara Dön</a>
<table class="table table-striped">
    <tr>
        <th>Gönderen Ad Soyad</th>
        <td>@Model.NameSurname</td>
    </tr>
    <tr>
        <th>Gönderen Email </th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Mesaj İçerigi</th>
        <td>@Model.MessageContent</td>
    </tr>
</table>