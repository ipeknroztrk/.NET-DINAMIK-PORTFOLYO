@model StellerAcunMedyaPortfolio.Models.TblFeature
@{
    ViewBag.Title = "UpdateFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Öne Çıkan Alanı Güncelleme Sayfası</h2>



<form method="post">
    @Html.HiddenFor(x=>x.FeatureID)
    <label>Resim Url</label>
    @Html.TextBoxFor(x => x.imageUrl, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Ad Soyad</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>UnvaN</label>
    @Html.TextBoxFor(x => x.Job, new { @class = "form-control" })<br />
    <label>Cv Download</label>
    @Html.TextBoxFor(x => x.CvDownload, new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary">Güncelle</button>

</form>